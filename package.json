{
  "name": "pre",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "turbo-dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "format": "prettier . --write",
    "prepare": "husky",
    "typecheck": "tsx -b"
  },
  "dependencies": {
    "animejs": "^4.0.2",
    "next": "15.3.2",
    "normalize.css": "^8.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-perfectionist": "^4.12.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "pretty-quick": "^4.1.1",
    "tailwindcss": "^4",
    "tsc-files": "^1.1.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc-files --noEmit"
    ],
    "*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,md,css,mjs,json}": [
      "pretty-quick --staged"
    ]
  }
}
